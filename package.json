{
  "name": "bifrost-bridge",
  "version": "1.0.0",
  "description": "Toolkit for liberating development from corporate network restrictions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "extract-certs": "npx tsx scripts/infra/extract_certs.js",
    "build": "tsc",
    "test": "ts-node tests/test_sdk.ts",
    "start": "npx ts-node src/cli.ts",
    "detect": "npx ts-node src/cli.ts detect",
    "slice": "npx ts-node src/cli.ts slice",
    "setup": "npx ts-node src/cli.ts setup-tools",
    "win-dominance": "npx ts-node src/cli.ts win-dominance",
    "shell": "npx ts-node src/cli.ts shell",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "worker:dev": "npm run dev --prefix workers/crypt-core",
    "worker:deploy": "npm run deploy --prefix workers/crypt-core",
    "worker:test": "npm run test --prefix workers/crypt-core",
    "worker:types": "npm run typegen --prefix workers/crypt-core",
    "proxy:linear:deploy": "npm run deploy --prefix workers/linear-proxy",
    "proxy:perplexity:deploy": "npm run deploy --prefix workers/perplexity-proxy",
    "seed:sluagh": "bash scripts/linear/seed-sluagh.sh",
    "secure:exec": "npx tsx scripts/infra/secure-connect.ts",
    "audit:stack": "npx tsx scripts/infra/audit_deprecations.ts",
    "audit:enforce": "npm run format:check && npm run lint && npx tsx scripts/enforce/validate-manifests.ts && npm run secure:exec npx tsx scripts/enforce/semantic-audit.ts workers/worker-bees"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "manifest.json": [
      "npx tsx scripts/enforce/validate-manifests.ts"
    ]
  },
  "prepare": "husky",
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "keywords": [
    "corporate",
    "proxy",
    "mcp",
    "toolkit",
    "perplexity"
  ],
  "author": "Antigravity",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.42.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dotenv": "^16.4.5",
    "openai": "^6.22.0",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@linear/sdk": "^75.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.32",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "better-sqlite3": "^12.6.2",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.7.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0"
  }
}
